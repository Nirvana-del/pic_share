/* 水平间距 */
.wrap .top-info {
  position: relative;
  margin-top: 30rpx;
}
.wrap .top-info .left {
  display: flex;
  justify-content: space-around;
}
.wrap .top-info .left .nick {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  align-content: space-around;
}
.wrap .top-info .left .nick .name {
  font-size: 50rpx;
  display: flex;
  align-items: center;
}
.wrap .top-info .left .nick .id {
  font-size: 23rpx;
  padding-top: 20rpx;
}
.wrap .top-info .left .nick .introduce {
  font-size: 23rpx;
  padding-top: 20rpx;
}
.wrap .top-info .right {
  position: absolute;
  left: 20rpx;
  top: 140rpx;
}
.wrap .top-info .right .edit {
  color: #fff;
  border-radius: 100px;
  font-size: 30rpx;
  background-color: #69B197;
  height: 70rpx;
  width: 250rpx;
  margin-bottom: 50rpx;
}
.wrap .main {
  margin-top: 60rpx;
}
.wrap .main .title {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  padding: 15rpx;
  color: #000;
  border: 1px solid #fff;
  border-top-left-radius: 60rpx;
  border-top-right-radius: 60rpx;
}
.wrap .main .imgList {
  display: flex;
  padding-left: 10rpx;
}
.wrap .main .imgList .chat-custom-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-end;
}
.wrap .main .imgList .chat-custom-right .chat-custom-text {
  font-size: 12px;
  color: #999;
}
.wrap .main .imgList .chat-custom-right .icon {
  display: flex;
  justify-content: space-around;
}
.wrap .main .imgList .chat-custom-right .icon .trash {
  margin-right: 20rpx;
}
.wrap .main .imgList .imgItem image {
  width: 100rpx;
  height: 100rpx;
}

